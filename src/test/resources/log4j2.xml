<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="eu.boxwork.dhbw.uebungen.AbstractPersistence" additivity="false" level="error">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="eu.boxwork.dhbw.uebungen.Persistence" additivity="false" level="error">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="eu.boxwork.dhbw.uebungen.OptimisedPersistence" additivity="false" level="error">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="eu.boxwork.dhbw.uebungen.TransactionFactory" additivity="false" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="eu.boxwork.dhbw.uebungen.Localtime" additivity="false" level="error">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>